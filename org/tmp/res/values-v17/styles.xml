<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DeskClock" parent="@*android:style/Theme.Holo">
        <item name="android:windowBackground">@drawable/framework_background_holo_dark</item>
        <item name="android:dropDownListViewStyle">@style/DeskClockDropDownListView</item>
        <item name="android:actionBarStyle">@style/DeskClockBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarTabStyle">@*android:style/Widget.Holo.ActionBar.TabView</item>
        <item name="android:actionBarTabBarStyle">@*android:style/Widget.Holo.ActionBar.TabBar</item>
    </style>
    <style name="DeskClockDropDownListView" parent="@*android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/com_android_deskclock_item_background</item>
    </style>
    <style name="DeskClockBarStyle" parent="@*android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/framework_ab_stacked_transparent_dark_holo</item>
        <item name="android:displayOptions"></item>
        <item name="android:backgroundStacked">@drawable/framework_ab_stacked_transparent_dark_holo</item>
    </style>
    <style name="AlarmClockTheme" parent="@*android:style/Theme.Holo">
        <item name="android:windowBackground">@drawable/framework_background_holo_dark</item>
        <item name="android:dropDownListViewStyle">@style/DeskClockDropDownListView</item>
        <item name="android:actionBarStyle">@style/SettingsTheme.ActionBar</item>
        <item name="android:selectableItemBackground">@drawable/com_android_deskclock_item_background</item>
    </style>
    <style name="SettingsTheme" parent="@*android:style/Theme.Holo">
        <item name="android:windowBackground">@drawable/framework_background_holo_dark</item>
        <item name="android:dropDownListViewStyle">@style/DeskClockDropDownListView</item>
        <item name="android:actionBarStyle">@style/SettingsTheme.ActionBar</item>
        <item name="android:selectableItemBackground">@drawable/com_android_deskclock_item_background</item>
    </style>
    <style name="SettingsTheme.ActionBar" parent="@*android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:titleTextStyle">@*android:style/TextAppearance.Holo.Widget.ActionBar.Title</item>
    </style>
</resources>
